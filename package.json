{
  "name": "myst-theme",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "themes/*",
    "styles",
    "docs"
  ],
  "scripts": {
    "postinstall": "patch-package --patch-dir patches",
    "compile": "turbo run compile",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel --filter='./packages/*'",
    "theme:book": "turbo run dev --parallel --filter='./themes/book'",
    "theme:article": "turbo run dev --parallel --filter='./themes/article'",
    "test": "turbo run test",
    "storybook": "cd docs && bun run storybook",
    "build-storybook": "bun run build && cd docs && storybook build",
    "clean": "turbo run clean --parallel && find . -name '.turbo' -type d -prune -exec rm -rf '{}' +",
    "lint": "turbo run lint",
    "lint:format": "turbo run lint:format",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepublishOnly": "bun run build",
    "changeset": "changeset",
    "version": "changeset version && bun install",
    "publish": "bun run clean && bun run build -- --force && changeset publish && git push --follow-tags",
    "publish:ci": "bun run clean && bun run build && changeset publish && git push --follow-tags",
    "bump:myst:packages": "bunx npm-upgrade-monorepo -w 'packages/*' 'myst-* @myst-theme/* thebe*'",
    "bump:myst:themes": "bunx npm-upgrade-monorepo -w 'themes/*' 'myst-* @myst-theme/* thebe*'",
    "bump:myst": "bun run bump:myst:packages && bun run bump:myst:themes",
    "install-pre-commit": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@remix-run/node": "~1.17.0",
    "@remix-run/react": "~1.17.0",
    "@tailwindcss/typography": "^0.5.9",
    "@types/react": "^18.2.24",
    "@types/react-dom": "^18.2.8",
    "concurrently": "^8.2.0",
    "eslint-config-curvenote": "^0.0.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "myst-spec-ext": "^1.8.1",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.5.1",
    "prettier": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.2",
    "turbo": "latest",
    "typescript": "^5.1.3",
    "vitest": "^0.32.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "bun@1.2.2",
  "lint-staged": {
    "*.ts": "eslint --config ./.eslintrc.cjs --fix",
    "*.{js,jsx,ts,tsx,md,html,css,json}": "prettier --write"
  }
}
