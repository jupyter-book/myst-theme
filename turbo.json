{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "compile": {
      "dependsOn": ["^compile"],
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "api/**", "public/build/**", "**/tailwind.css"]
    },
    "clean": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "lint:format": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
